<h1>勤怠情報一覧</h1>



<table border="1">
  <tr>
    <td>ユーザーID</td>
    <td>氏名</td>
    <td>勤怠開始時間</td>
    <td>勤怠終了時間</td>
    <td>承認</td>
  </tr>
  <% @attendances.each do |attendance| %>
  <tr>
    <td><%= attendance.user_id %></td>
    <td><%= attendance.user.name %></td>
    <td><%= attendance.start %></td>
    <td><%= attendance.end %></td>
    <td>
      <% if attendance.approval %>
        <%= form_for attendance ,url: '/attendances/approval' ,method: :post do |f| %>
          <%= f.hidden_field :id, :value => attendance.id %>
          <%= f.hidden_field :approval, :value => false %>
          <p><%= f.submit "承認済み" %></p>
        <% end %>   
      <% else %>
        <%= form_for attendance ,url: '/attendances/approval' ,method: :post do |f| %>
          <%= f.hidden_field :id, :value => attendance.id %>
          <%= f.hidden_field :approval, :value => true %>
          <p><%= f.submit "承認" %></p>
        <% end %>    
      <% end %>
    </td>
  </tr>
  <% end %>
</table>


<p><%= link_to "管理者ページへ", admin_index_path %></p>

